# Production Environment Variables for Vercel Deployment

# Node Environment
NODE_ENV="production"

# Disable development features in production
NEXT_PUBLIC_USE_REAL_AUTH="true"
NEXT_PUBLIC_ENABLE_DEV_AUTH="false" 
NEXT_PUBLIC_ENABLE_FILE_STORAGE="false"

# AI APIs (Set these in Vercel dashboard)
GEMINI_API_KEY="your-gemini-api-key-here"
GOOGLE_API_KEY="your-google-api-key-here" 
OPENAI_API_KEY="your-openai-api-key-here"

# Firebase Configuration (Set these in Vercel dashboard)
NEXT_PUBLIC_FIREBASE_API_KEY="your-firebase-api-key"
NEXT_PUBLIC_FIREBASE_APP_ID="your-firebase-app-id"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your-sender-id"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project.firebasestorage.app"

# Application Secrets (Set these in Vercel dashboard)
ENCRYPTION_KEY="your-encryption-key"
BLOG_API_SECRET_KEY="your-blog-api-secret"
NEXT_PUBLIC_BLOG_API_SECRET="your-blog-api-secret"

# Admin Configuration
ADMIN_EMAILS="admin@innerspell.com"

# Build Configuration
NEXT_PUBLIC_BUILD_TIMESTAMP=production
NEXT_PUBLIC_FORCE_REFRESH=false

# Performance
TURBO_CACHE="remote:ro"
TURBO_REMOTE_ONLY="true"