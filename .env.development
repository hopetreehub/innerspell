# Development Environment Variables
# This file contains development-specific environment variables

# Performance and monitoring (disabled for development)
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_PERFORMANCE_MONITORING=false

# Rate limiting (relaxed for development)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging level (verbose for debugging)
LOG_LEVEL=debug

# Cache settings (short TTL for development)
CACHE_TTL=60

# Security settings (relaxed for development)
SECURITY_HEADERS_ENABLED=false
CSP_ENABLED=false

# Development tools
NEXT_PUBLIC_SHOW_DEBUG_INFO=true

# Mock authentication for development
# Set this to 'true' to use real Firebase auth in development
# Leave unset or 'false' to use mock user
NEXT_PUBLIC_USE_REAL_AUTH=false