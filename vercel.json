{
  "buildCommand": "npm run clean && npm run build",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "installCommand": "rm -rf node_modules .next .vercel/cache && npm install --legacy-peer-deps",
  "public": true,
  "github": {
    "silent": true
  },
  "build": {
    "env": {
      "NEXT_CACHE_DISABLED": "1",
      "MIDDLEWARE_CACHE_BUST": "2025-07-30-config-scope-fix"
    }
  },
  "devCommand": "npm run dev",
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate, max-age=0"
        },
        {
          "key": "Pragma",
          "value": "no-cache"
        },
        {
          "key": "Expires",
          "value": "0"
        }
      ]
    },
    {
      "source": "/blog",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/sitemap.xml",
      "destination": "/api/sitemap"
    },
    {
      "source": "/robots.txt", 
      "destination": "/api/robots"
    }
  ]
}